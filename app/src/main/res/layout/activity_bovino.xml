<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".activity.BovinoActivity">


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtFiltro"
            android:theme="@style/MyEditTextTheme"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:hint="Identificação do Bovino"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:id="@+id/btnBuscar"
            android:width="150dp"
            android:height="55dp"
            android:gravity="center"
            android:layout_below="@+id/txtFiltro"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identificar por QRCode"
            android:id="@+id/btnQrcode"
            android:width="180dp"
            android:gravity="center"
            android:height="55dp"
            android:layout_alignBottom="@+id/btnBuscar"
            android:layout_alignRight="@+id/btnBuscar"
            android:layout_alignEnd="@+id/txtFiltro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ficha do Bovino"
            android:id="@+id/lblFichaBovino"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/btnBuscar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnQrcode"
            android:layout_alignEnd="@+id/btnQrcode" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/txtCodigo"
            android:textColor="#000000"
            android:layout_below="@+id/lblFichaBovino"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="38dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/txtDescricao"
            android:textColor="#000000"
            android:layout_alignTop="@+id/lblDescricao"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/txtRaca"
            android:textColor="#000000"
            android:layout_alignTop="@+id/lblRaca"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/txtOrigem"
            android:textColor="#000000"
            android:layout_alignTop="@+id/lblOrigem"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/txtDataNascimento"
            android:textColor="#000000"
            android:layout_alignTop="@+id/lblDataNascimento"
            android:layout_alignRight="@+id/view2"
            android:layout_alignEnd="@+id/view2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Código:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/lblCodigo"
            android:layout_below="@+id/lblFichaBovino"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="8dp" />

        <View
            android:background="#e2e1e1"
            android:layout_width="fill_parent"
            android:layout_above="@+id/lblDescricao"
            android:layout_height="1dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descrição:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/lblDescricao"
            android:layout_below="@+id/lblCodigo"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp" />

        <View
            android:background="#e2e1e1"
            android:layout_width="fill_parent"
            android:layout_above="@+id/lblRaca"
            android:layout_height="1dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Raça:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/lblRaca"
            android:layout_below="@+id/lblDescricao"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp" />

        <View
            android:background="#e2e1e1"
            android:layout_width="fill_parent"
            android:layout_above="@+id/lblOrigem"
            android:layout_height="1dip"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Origem:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/lblOrigem"
            android:layout_below="@+id/lblRaca"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp" />

        <View
            android:background="#e2e1e1"
            android:layout_width="fill_parent"
            android:layout_above="@+id/lblDataNascimento"
            android:layout_height="1dip"
            android:id="@+id/view2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data de Nascimento:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/lblDataNascimento"
            android:layout_below="@+id/lblOrigem"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp" />

        <View
            android:background="#e2e1e1"
            android:layout_width="fill_parent"
            android:layout_below="@+id/lblDataNascimento"
            android:layout_height="1dip"
            android:id="@+id/view3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Peso:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/lblPesoAtual"
            android:layout_below="@+id/lblDataNascimento"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp" />

        <View
            android:background="#e2e1e1"
            android:layout_width="fill_parent"
            android:layout_below="@+id/lblPesoAtual"
            android:layout_height="1dip"
            android:id="@+id/view4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Altura:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/lblAlturaAtual"
            android:layout_below="@+id/lblPesoAtual"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp" />

        <View
            android:background="#e2e1e1"
            android:layout_width="fill_parent"
            android:layout_below="@+id/lblAlturaAtual"
            android:layout_height="1dip"
            android:id="@+id/view5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Circunferência Torácica:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/lblCircunferenciaAtual"
            android:layout_below="@+id/lblAlturaAtual"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp" />

        <View
            android:background="#e2e1e1"
            android:layout_width="fill_parent"
            android:layout_below="@+id/lblCircunferenciaAtual"
            android:layout_height="1dip"
            android:id="@+id/view6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/txtPesoAtual"
            android:textColor="#000000"
            android:layout_alignTop="@+id/lblPesoAtual"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/txtAlturaAtual"
            android:textColor="#000000"
            android:layout_alignTop="@+id/lblAlturaAtual"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/txtCircunferenciaAtual"
            android:textColor="#000000"
            android:layout_alignTop="@+id/lblCircunferenciaAtual"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualizar Gráficos"
            android:id="@+id/btnVisualizarGraficos"
            android:layout_below="@+id/view6"
            android:layout_marginTop="42dp"
            android:enabled="false"
            android:layout_alignRight="@+id/view6"
            android:layout_alignEnd="@+id/view6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</ScrollView>